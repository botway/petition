<h1>Welcome to Petition! Please, register.</h1>
<img src="./assets/symbol.png" alt="symbol">
<p id="notice" style="visibility:{{#if data.message}}visible;{{else}}hidden;{{/if}}">{{#if data.message}}{{data.message}}{{else}}Hey, please fill out the forms!{{/if}}</p>
<form id="form" method="post">
    <input type="text" name="firstName" id="firstName" value="" placeholder="First Name" required>
    <input type="text" name="lastName" id="lastName" value="" placeholder="Last Name" required>
    <input type="email" name="email" id="email" value="" placeholder="some@email.com" required>
    <input type="password" name="password" id="password" value="" placeholder="your password" required>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
</form>
<button type="button" name="button" id="signup">SIGN UP</button>
<p>If you are already a member, please <a href="/login">log in</a></p>
<script src="./scripts/login.js" charset="utf-8"></script>
