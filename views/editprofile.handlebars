<br><br><img src="/assets/symbol.png" alt="symbol">
<h1>Edit your profile</h1>
<p id="notice" style="display:{{#if data.message}}inherit;{{else}}none;{{/if}}">{{#if data.message}}{{data.message}}{{/if}}</p>
<form class="form" method="post" action="/profile/edit">
    <input type="text" name="first_name" value="{{data.first_name}}" placeholder="First Name" required>
    <input type="text" name="last_name" value="{{data.last_name}}" placeholder="Last Name" required>
    <input type="email" name="email" value="{{data.email}}" placeholder="email adress" required>
    <input type="password" name="password" value="" placeholder="password">
    <input type="number" name="age" value="{{data.age}}" placeholder="age">
    <input type="text" name="city" value="{{data.city}}" placeholder="City">
    <input type="url" name="homepage" value="{{data.homepage}}" placeholder="homepage">
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
    <div class="right-wrap">
        <button type="submit" name="update" id="update" class="button">UPDATE</button>
    </div>
</form>
<form id="deleteProfile" method="post">
    <div class="left-wrap">
        <button type="submit" name="deleteProfile" value="true" class="button" id="delete">DELETE</button>
    </div>
    <input type="hidden" name="_csrf" value="{{csrfToken}}">
</form>
